{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/__tests__/**/*"]
  }